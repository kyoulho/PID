{
  "compilerOptions": {
    "outDir": "./dist",
    // 컴파일된 파일을 저장할 디렉토리
    "rootDir": "./src",
    // 소스 파일의 루트 디렉토리
    "experimentalDecorators": true,
    // 데코레이터 사용을 허용
    "emitDecoratorMetadata": true,
    // 데코레이터 메타데이터를 런타임에 생성
    "baseUrl": "src",
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}